<% layout('/layouts/boilerplate.ejs') -%>

<script>
  const latitude = '<%- JSON.stringify(data.mapPoint.coordinates[1])  %>';
  const longitude = '<%- JSON.stringify(data.mapPoint.coordinates[0])  %>';
</script>

<div class="m-auto w-75">
  <h2><%= listing.title %></h2>
  <div class="d-flex justify-content-center">
    <img
      src="<%= listing.image.url %>"
      class="image rounded-3 my-4"
      style="object-fit: cover; width: 100%"
    />
  </div>
  <ul class="list-unstyled">
    <li><b>Owned by : </b><i><%= listing.owner.username %></i></li>
    <li><b>Description : </b><%= listing.description %></li>
    <li><b>Rs </b><%= listing.price.toLocaleString("en-us") %>/night</li>
    <li><b>location : </b><%= listing.location %></li>
    <li><b>Country : </b><%= listing.country %></li>
  </ul>

  <div class="d-flex">
    <form method="GET" action="/listings/<%= listing._id %>/edit">
      <button
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-danger me-3 red-btn"
      >
        Edit
      </button>
    </form>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button type=" submit" class="btn btn-dark">Delete</button>
    </form>
  </div>
</div>
<hr />

<h3 style="text-align: center; margin: 20px">Where you'll be</h3>
<div id="map" style="height: 350px; border-radius: 10px; z-index: 2;"></div>

<hr />

<% if(currUser){ %>
<div class="mt-4 m-auto w-75">
  <h4>Leave a Review</h4>

  <form
    method="POST"
    action="/listings/<%= listing._id %>/reviews"
    class="needs-validation"
    novalidate
  >
    <fieldset class="starability-slot">
      <legend>Rating:</legend>
      <input
        type="radio"
        id="no-rate"
        class="input-no-rate"
        name="review[rating]"
        value="1"
        checked
        aria-label="No rating."
      />
      <input type="radio" id="first-rate1" name="review[rating]" value="1" />
      <label for="first-rate1" title="Terrible">1 star</label>
      <input type="radio" id="first-rate2" name="review[rating]" value="2" />
      <label for="first-rate2" title="Not good">2 stars</label>
      <input type="radio" id="first-rate3" name="review[rating]" value="3" />
      <label for="first-rate3" title="Average">3 stars</label>
      <input type="radio" id="first-rate4" name="review[rating]" value="4" />
      <label for="first-rate4" title="Very good">4 stars</label>
      <input type="radio" id="first-rate5" name="review[rating]" value="5" />
      <label for="first-rate5" title="Amazing">5 stars</label>
    </fieldset>
    <div class="mt-2 mb-2">
      <label for="comment">Comment</label>
      <textarea
        cols="20"
        rows="5"
        name="review[comment]"
        class="form-control"
        id="comment"
        required
      ></textarea>
      <div class="invalid-feedback">Please enter some Comment</div>
    </div>
    <button class="btn red-btn mt-3 ">Submit</button>
  </form>
</div>
<hr />
<% } %>
<div class="m-auto w-75 row g-3 my-4">
  <% if(listing.reviews !=0 ) {%>
  <h4>All Reviews</h4>
    <% } else {%>
  <h4 class="d-flex justify-content-center align-items-center">No Reviews Yet</h4>
  <% } %>
  <% for(let review of listing.reviews){ %>
  <div class=" mt-3 col-lg-4 col-md-6" style="height: auto">
    <div class="card h-100">
    <div class="card-body">
      <h4 class="card-title"><%= review.author.username %></h4>
      <p class="card-text"><%= review.comment%></p>
      <p class="starability-result" data-rating="<%= review.rating%>"></p>
      <% if(currUser && currUser._id.equals(review.author._id)){ %>
      <form
        method="POST"
        action="/listings/<%=listing._id %>/reviews/<%=review._id%>?_method=DELETE "
      >
        <button class="btn red-btn mt-3 ">Delete</button>
      </form>
      <% }%>
      </div>
    </div>
  </div>
  <% } %>
</div>

<script src="/js/map.js" defer></script>